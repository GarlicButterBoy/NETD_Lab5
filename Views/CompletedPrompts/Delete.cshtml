@model NETD_Lab5.Models.CompletedPrompts

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete a Complete Prompt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Prompt ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.p_id)
        </dd>
        <dt class = "col-sm-2">
            Book Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.book_name)
        </dd>
        <dt class = "col-sm-2">
            Author Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.author_name)
        </dd>
        <dt class = "col-sm-2">
            Rating
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rating)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="completed_id" />
        <input type="submit" value="Delete" class="btn btn-block btn-danger" /> <hr/>
        <button type="button" class="btn btn-outline-secondary text-light btn-block"> <a class="text-light" asp-action="Index">Back to List</a>
        </button>
</form>
</div>
