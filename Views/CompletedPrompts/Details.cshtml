@model NETD_Lab5.Models.CompletedPrompts

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Details of a Completed Prompt</h4>
    <hr />
    <button type="button" class="btn btn-outline-info text-light btn-block">
        <a  class="text-light" asp-action="Edit" asp-route-id="@Model.completed_id">Edit</a>
    </button>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Prompt ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.p_id)
        </dd>
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book_name)
        </dd>
        <dt class="col-sm-2">
            Authors Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.author_name)
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.rating)
        </dd>
    </dl>
</div>
<div>

    <button type="button" class="btn btn-outline-secondary text-light btn-block"> <a class="text-light" asp-action="Index">Back to List</a></button>
</div>
