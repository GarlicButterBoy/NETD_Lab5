@model IEnumerable<NETD_Lab5.Models.CompletedPrompts>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Completed Prompts!</h1>

<p>
    <button type="button" class="btn btn-outline-primary text-light btn-block"><a class="text-light" asp-action="Create">Create New</a></button>
</p>
<table class="table bg-dark text-light">
    <thead>
        <tr>
            <th>
                Prompt ID
            </th>
            <th>
                Book Title
            </th>
            <th>
                Author
            </th>
            <th>
                Rating
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.p_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.book_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rating)
            </td>
            <td>
                <button type="button" class="btn btn-outline-info text-light btn-sm"><a asp-action="Edit" asp-route-id="@item.completed_id">Edit</a></button> |
                <button type="button" class="btn btn-outline-info text-light btn-sm"><a asp-action="Details" asp-route-id="@item.completed_id">Details</a></button> |
                <button type="button" class="btn btn-outline-danger text-light btn-sm"><a asp-action="Delete" asp-route-id="@item.completed_id">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
